{
"layer": "top",
"position": "top",
"height": 40,
"spacing": 8,
"modules-left": ["hyprland/workspaces", "hyprland/window"],
"modules-center": ["clock"],
"modules-right": [
"mpris",
"idle_inhibitor",
"gamemode",
"pulseaudio",
"network",
"cpu",
"memory",
"backlight",
"custom/gpu",
"custom/weather",
"custom/btc",
"custom/public_ip",
"custom/brightness_menu",
"custom/reboot",
"tray"
